<% if (title) { %>
    <h1 style="text-align: center; color: #333; margin-bottom: 20px;"><%= title %></h1>
<% } else {
    res.redirect('/');
} %>

<%- messages() %>

<% if (errors) { %>
    <div style="text-align: center; color: #d9534f; margin-bottom: 20px;">
        <ul>
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    </div>
<% } %>

<ul style="list-style-type: none; padding: 0; text-align: center;">
    <li style="display: inline-block; margin-right: 20px;">
        <a href="/inv/addNewClassification" style="text-decoration: none; color: #fff; font-weight: bold; background-color: #337ab7; padding: 10px 20px; border-radius: 5px; display: block;">Add New Classification</a>
    </li>

    <li style="display: inline-block;">
        <a href="/inv/addNewInventory" style="text-decoration: none; color: #fff; font-weight: bold; background-color: #337ab7; padding: 10px 20px; border-radius: 5px; display: block;">Add New Inventory</a>
    </li>
</ul>

<div id="manage-section">
    <h2>Manage Inventory</h2>
    <p>Select a classification from the list</p>
    <select name="classification_id" id="classification_id" required>
        <option value="" disabled <%= (!locals.classification_id) ? ' selected' : '' %>>Select a Classification</option>
        <% options.forEach(option => { %>
            <option value="<%= option.value %>" <%= (option.value == locals.classification_id) ? 'selected' : '' %>>
                <%= option.label %>
            </option>
        <% }); %>
    </select>
    <table id="inventoryDisplay"></table>
</div>
<noscript>JavaScript must be enabled to use this page.</noscript>

<script src="../../js/inventory.js"></script>