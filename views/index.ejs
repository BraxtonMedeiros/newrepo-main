<div id="background-container">
    <div id="hero">
        <h1>Welcome to CSE Motors!</h1>
        <%- messages() %>
        <img src="/images/vehicles/delorean.jpg" alt="delorean" id="delorean">
        <div id="own">
            <h1>DMC Delorean</h1>
            <ul class="stuff">
                <li>3 Cup holders</li>
